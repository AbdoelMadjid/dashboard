{% extends 'AppBundle:Layout:main.html.twig' %}
{% trans_default_domain 'AppBundle' %}
{% set path = path('indikator_create') %}

{% block content %}
<article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
<div class="jarviswidget jarviswidget-sortable">
    <header role="heading">
        <span class="widget-icon"> <i class="fa fa-crosshairs"></i> </span>
        <h2>TAMBAH INDIKATOR</h2>
        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
    </header>
    <div role="content">
        <div class="jarviswidget-editbox">
        </div>
        <div class="widget-body no-padding">
            {{ form_start(form, {'action': path, 'method': 'POST', attr: {'class': 'smart-form'}}) }}
            <fieldset>
                <div class="row">
                    <section class="col col-6">
                        {{ form_row(form.parent, {attr: {'class': 'select'}}) }}
                    </section>
                    <section class="col col-6">
                        {{ form_row(form.code) }}
                    </section>
                </div>
                <div class="row">
                    <section class="col col-lg-12">
                        {{ form_row(form.name) }}
                    </section>
                </div>
            </fieldset>
            <footer>
                <button type="submit" class="btn btn-success">{{ 'form.button.submit' | trans }}</button>
                <a href = "{{ path('indikator_index') }}" class="btn btn-primary">
                    {{ 'action.back' | trans }}
                </a>
            </footer>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</article>
{% endblock %}